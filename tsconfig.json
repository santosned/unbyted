{
  "compilerOptions": {
    "pretty": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": ["es5"],
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["package/**/*"]
}
